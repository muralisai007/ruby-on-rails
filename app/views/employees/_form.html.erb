<!-- app/views/employees/_form.html.erb -->
<%= form_with(model: @employee, local: true) do |form| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% @employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :first_name, class: 'form-label' %>
    <%= form.text_field :first_name, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Please provide a valid first name.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, class: 'form-label' %>
    <%= form.text_field :last_name, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Please provide a valid last name.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :phone_no, class: 'form-label' %>
    <%= form.text_field :phone_no, class: 'form-control', pattern: '\d{10}', required: true %>
    <div class="invalid-feedback">
      Please provide a valid phone number (10 digits).
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, class: 'form-control', pattern: '\A[\w+\-.]+@gmail\.com\z', required: true %>
    <div class="invalid-feedback">
      Please provide a valid Gmail address.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :date_of_birth, class: 'form-label' %>
    <%= form.text_field :date_of_birth, class: 'form-control', placeholder: "DD/MM/YYYY", pattern: '\d{2}/\d{2}/\d{4}', required: true %>
    <div class="invalid-feedback">
      Please provide a valid date of birth in the format DD/MM/YYYY.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :aadhaar_input, class: 'form-label' %>
    <%= form.text_field :aadhaar_input, class: 'form-control', pattern: '\d{12}', required: true %>
    <div class="invalid-feedback">
      Please provide a valid Aadhaar number (12 digits).
    </div>
  </div>

<div class="mb-3">
    <%= form.label :designation, class: "form-label" %>
    <%= form.text_field :designation, class: "form-control", required: true %>
    
  </div>
  <div class="mb-3">
  <%= form.label :status, class: "form-label" %>
  <%= form.select :status, options_for_select([['Active', 1], ['Inactive', 0]], selected: @employee.status), {}, class: "form-select" %>
</div>

  <div class="mb-3">
    <%= form.label :salary, class: "form-label" %>
    <%= form.text_field :salary, class: "form-control", required: true %>
    
  </div>
  

  <div class="mb-3">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>

<script>
  // JavaScript for Bootstrap 5 form validation
  (function () {
    'use strict'

    var forms = document.querySelectorAll('.needs-validation')

    Array.prototype.slice.call(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
  })()
</script>

